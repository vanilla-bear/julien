{% if shop_menu_style is not empty %}
	{% set menu_style = shop_menu_style %}
{% endif %}
{% if shop_topbar is not empty %}
	{% set topbar = shop_topbar %}
{% endif %}
{% if shop_slogan is not empty %}
	{% set slogan = shop_slogan %}
{% endif %}
{% if shop_page_title_bgimage is not empty %}
	{% set page_title_image = shop_page_title_bgimage %}
{% endif %}
{% if shop_footer_style is not empty %}
	{% set footer_style = shop_footer_style %}
{% endif %}
{% if node is defined and node.field_page_title_style is not empty %}
	{% set page_title_style = node.field_page_title_style.value %}
{% endif %}
{% if page_title_style is empty %}
	{% set page_title_style = 'small_grey' %}
{% endif %}
{% if node is defined and node.field_page_title_image is not empty %}
    {% set page_title_image = file_url(node.field_page_title_image.entity.fileuri) %}
{% endif %}
{% if node is defined and node.field_page_title_class is not empty %}
	{% set page_title_class = node.field_page_title_class.value %}
{% endif %}
{% if page_title_class is empty %}
	{% set page_title_class = '' %}
{% endif %}
{% include directory ~ '/templates/layout/header-page.html.twig' %}
<!-- CONTENT -->
<div class="page-section p-140-cont">
	<div class="container">
		{{ messages }}
		{{ page.content }}
	</div>
	<hr class="mt-0 mb-80">
	<!-- RELATED PRODUCTS -->
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h4 class="blog-page-title mt-0 mb-40">RELATED PRODUCTS</h4>
			</div>
			{{ drupal_view('_hawell_products', 'embed_related_products') }}
		</div>
	</div>
</div>
{{ page.section }}
{{ page.page_bt }}
{% include directory ~ '/templates/layout/footer.html.twig' %}
{% if  menu_style == 'min_menu' %}
</div> <!-- sliding-content -->
{% endif %}
{% if rows %}
<div class="container">
	<div class="row">
	{% set terms = rows.0.0['#rows'] %}
	{% set n = 0 %}
	{% set l = terms|length %}
	{% if l >= 4 %}
		{% for item in terms %}
			{% set n = n + 1 %}
			{% set term = item['#row'].tid|str_replace(' ', '')|term_load %}
			{% if n == 1 %}
			<div class="col-md-8 col-sm-8 plr-5">
				<div class="row">
					<div class="col-md-6 col-sm-6 shop-dep-item mb-10">
	                    <a href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': term.tid.value}) }}">
	                      	<img src="{{ term.field_thumbnail.entity.fileuri|image_style_url('image_380x365') }}" alt="{{ term.field_thumbnail.alt }}">
	                      	<div class="shop-dep-text-cont">
	                        	<h4 class="uppercase">{{ term.name.value }}</h4>
	                        	<span>{{ 'COLLECTION'|t }}</span>
	                      	</div>
	                    </a>
	                </div>
	        {% elseif n == 2 %}
	        		<div class="col-md-6 col-sm-6 shop-dep-item mb-10">
	                    <a href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': term.tid.value}) }}">
	                      	<img src="{{ term.field_thumbnail.entity.fileuri|image_style_url('image_380x365') }}" alt="{{ term.field_thumbnail.alt }}">
	                      	<div class="shop-dep-text-cont">
	                        	<h4 class="uppercase">{{ term.name.value }}</h4>
	                        	<span>{{ 'COLLECTION'|t }}</span>
	                      	</div>
	                    </a>
	                </div>
	            </div>
	        {% elseif n == 3 %}
	        	<div class="row">               
	                <div class="col-md-12 shop-dep-item">
	                    <a href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': term.tid.value}) }}">
	                      	<img src="{{ term.field_thumbnail.entity.fileuri|image_style_url('image_770x264') }}" alt="{{ term.field_thumbnail.alt }}">
	                      	<div class="shop-dep-text-cont">
	                        	<h4 class="uppercase">{{ term.name.value }}</h4>
	                        	<span>{{ 'COLLECTION'|t }}</span>
	                      	</div>
	                    </a>
	                </div>
	            </div>
	        </div>
	        {% elseif n == 4 %}
			<div class="col-md-4 col-sm-4 shop-dep-item">
				<a href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': term.tid.value}) }}">
					<img src="{{ term.field_thumbnail.entity.fileuri|image_style_url('image_380x640') }}" alt="{{ term.field_thumbnail.alt }}">
					<div class="shop-dep-text-cont">
						<h4 class="uppercase">{{ term.name.value }}</h4>
	                    <span>{{ 'COLLECTION'|t }}</span>
					</div>
				</a>
			</div>
			{% else %}
			<div class="col-md-4 col-sm-4 shop-dep-item mb-10">
				<a href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': term.tid.value}) }}">
					<img src="{{ term.field_thumbnail.entity.fileuri|image_style_url('image_380x365') }}" alt="{{ term.field_thumbnail.alt }}">
					<div class="shop-dep-text-cont">
						<h4 class="uppercase">{{ term.name.value }}</h4>
						<span>{{ 'COLLECTION'|t }}</span>
					</div>
				</a>
			</div>
			{% endif %}
		{% endfor %}
	{% else %}
		{% for item in terms %}
			{% set n = n + 1 %}
			{% set term = item['#row'].tid|str_replace(' ', '')|term_load %}
			<div class="col-md-4 col-sm-4 shop-dep-item">
				<a href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': term.tid.value}) }}">
					<img src="{{ term.field_thumbnail.entity.fileuri|image_style_url('image_380x365') }}" alt="{{ term.field_thumbnail.alt }}">
					<div class="shop-dep-text-cont">
						<h4 class="uppercase">{{ term.name.value }}</h4>
						<span>{{ 'COLLECTION'|t }}</span>
					</div>
				</a>
			</div>
		{% endfor %}
	{% endif %}
	</div>
</div>
{% endif %}